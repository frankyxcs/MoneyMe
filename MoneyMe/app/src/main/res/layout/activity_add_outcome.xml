<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/add_outcome_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/AppDefault"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:isScrollContainer="true"
        android:orientation="vertical"
        android:padding="4dp">

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_layout_out_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3">

            <EditText
                android:id="@+id/add_outcome_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="1234567890."
                android:hint="@string/amount"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"/>

        </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:minHeight="?android:attr/listPreferredItemHeight">
            <TextView
                android:id="@+id/TextView03"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_margin="4dp"
                android:text="@string/category" />

            <Spinner
                android:id="@+id/add_outcome_category"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:entries="@array/transaction_categories" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:minHeight="?android:attr/listPreferredItemHeight">
            <TextView
                android:id="@+id/TextView04"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_margin="4dp"
                android:text="@string/account" />

            <Spinner
                android:id="@+id/add_outcome_account"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:minHeight="?android:attr/listPreferredItemHeight">
            <TextView
                android:id="@+id/TextView07"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_margin="4dp"
                android:text="@string/date"/>

            <Button
                android:id="@+id/add_outcome_date"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:singleLine="true"
                android:text="12-12-12"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:onClick="showDatePickerDialog"
                android:theme="@style/BlackInput"
                style="@style/TextAppearance.EditEvent_SpinnerButton" />

        </LinearLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/add_outcome_note1111"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            android:layout_marginLeft="4dp"
            app:counterMaxLength="200">
            <EditText
                android:id="@+id/add_outcome_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/note"
                android:inputType="textAutoCorrect|textMultiLine|textAutoComplete"
                android:maxLength="200"
                android:maxLines="2"/>
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>
</ScrollView>
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/coordinator_outcome">
        <android.support.v4.widget.SlidingPaneLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sliding_pane_outcome">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                android:id="@+id/photoWrapper"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/add_outcome_cheque"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center"/>

                <ImageView
                    android:id="@+id/delete_outcome_cheque"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_close" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#434343">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/category"
                    android:textColor="#fff"
                    android:textStyle="italic|bold" />

                <com.devmoroz.moneyme.widgets.CategoryLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/category_layout"
                    android:columnCount="4"
                    android:rowCount="3"
                    android:background="#434343">

                    <Button
                        android:id="@+id/digit_7"
                        style="@style/CategoryButtonStyle"
                        android:onClick="onButtonClick"
                        android:text="7"
                        android:drawableTop="@drawable/ic_wallet"/>

                    <Button
                        android:id="@+id/digit_8"
                        style="@style/CategoryButtonStyle"
                        android:onClick="onButtonClick"
                        android:text="8" />

                    <Button
                        android:id="@+id/digit_9"
                        style="@style/CategoryButtonStyle"
                        android:onClick="onButtonClick"
                        android:text="9" />

                    <Button
                        android:id="@+id/digit_4"
                        style="@style/CategoryButtonStyle"
                        android:onClick="onButtonClick"
                        android:text="4" />

                    <Button
                        android:id="@+id/digit_5"
                        style="@style/CategoryButtonStyle"
                        android:onClick="onButtonClick"
                        android:text="5" />

                    <Button
                        android:id="@+id/digit_6"
                        style="@style/CategoryButtonStyle"
                        android:onClick="onButtonClick"
                        android:text="6" />

                    <Button
                        android:id="@+id/digit_1"
                        android:gravity="center"
                        android:onClick="onButtonClick"
                        style="@style/CategoryButtonStyle"
                        android:text="1" />

                    <Button
                        android:id="@+id/digit_2"
                        style="@style/CategoryButtonStyle"
                        android:onClick="onButtonClick"
                        android:text="2" />

                    <Button
                        android:id="@+id/digit_3"
                        style="@style/CategoryButtonStyle"
                        android:onClick="onButtonClick"
                        android:text="3" />

                    <Button
                        android:id="@+id/dec_point"
                        style="@style/CategoryButtonStyle"
                        android:onClick="onButtonClick"
                        android:text="." />

                    <Button
                        android:id="@+id/digit_0"
                        style="@style/CategoryButtonStyle"
                        android:onClick="onButtonClick"
                        android:text="0" />

                    <Button
                        android:id="@+id/eq"
                        style="@style/CategoryButtonStyle"
                        android:onClick="onButtonClick"
                        android:text="=" />

                </com.devmoroz.moneyme.widgets.CategoryLayout>

            </LinearLayout>
        </android.support.v4.widget.SlidingPaneLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_outcome_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/floating_action_button"
        app:fabSize="normal"
        android:layout_gravity="bottom|right|end"
        app:backgroundTint="@color/colorGreen"
        android:src="@drawable/ic_fab_check" />

    </android.support.design.widget.CoordinatorLayout>
</LinearLayout>