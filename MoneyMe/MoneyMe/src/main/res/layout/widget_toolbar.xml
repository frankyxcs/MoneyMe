<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar_widget"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line_bottom"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:paddingLeft="16dp"
        android:paddingEnd="16dp"
        android:paddingRight="16dp"
        android:paddingStart="16dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/widget_total_balance"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Баланс: 2000$"
            android:textAppearance="@style/Text.Body1"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/widget_note"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/icon_selector"
        android:gravity="center"
        android:padding="4dp"
        android:src="@drawable/ic_subject_white_36dp" />

    <ImageView
        android:id="@+id/widget_add"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/icon_selector"
        android:gravity="center"
        android:padding="4dp"
        android:src="@drawable/ic_add_circle_white_36dp" />

    <ImageView
        android:id="@+id/widget_minus"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/icon_selector"
        android:gravity="center"
        android:padding="4dp"
        android:src="@drawable/ic_remove_circle_white_36dp" />
    </LinearLayout>
</LinearLayout>